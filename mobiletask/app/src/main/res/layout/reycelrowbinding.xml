<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <ImageView
            android:id="@+id/cotagieesiofimageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hotelandmotel"
            android:layout_marginLeft="6dp"
            >

        </ImageView>
        <TextView
            android:id="@+id/textofcatogiries"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Hotel and motels"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp">

        </TextView>
        <TextView

            android:id="@+id/textofecatogiries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="21%"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            >

        </TextView>
        <TextView
           android:layout_gravity="center"
            android:id="@+id/textofecatogiriesrfgfg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="."
            android:textSize="25dp"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/narinci"
            >

        </TextView>

        <TextView
            android:id="@+id/textofcatogiries98"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1500 AZN"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp">

        </TextView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/agboz"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="4dp">

    </View>
</LinearLayout>